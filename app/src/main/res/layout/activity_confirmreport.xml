<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@color/white">
        <ImageButton
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:background="@drawable/icon_arrow"/>
        <Space
            android:layout_width="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고 내용 확인"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.Toolbar>
    
    <Space
        android:layout_width="wrap_content"
        android:layout_height="60sp"/>
    <ImageView
        android:id="@+id/img_confirmreport_photo"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:src="@drawable/icon_map4"
        android:layout_gravity="center"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="40sp"/>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/icon_spot"/>
        <TextView
            android:id="@+id/tv_confirmreport_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치정보"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.Toolbar>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_comfirmreport_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rectangle_left"
            android:layout_weight="1"
            android:text="취소하기"
            android:textColor="@color/black"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirmreport_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rectangle_right"
            android:layout_weight="1"
            android:text="신고하기"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>